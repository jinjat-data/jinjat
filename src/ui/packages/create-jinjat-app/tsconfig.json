{
    "include": [
        "src"
    ],
    "extends": "../../tsconfig.build.json",
    "compilerOptions": {
        "rootDir": "./src",
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "importHelpers": false,
        "strict": true,
        "paths": {
            "@utils/*": ["src/utils/*"],
            "@utils": ["src/utils"]
        },
        "typeRoots": [
            "./src/types",
            "../../node_modules/@types"
        ]
    }
}